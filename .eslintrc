{
  "parser": "babel-eslint",
  "plugins": [
    "flowtype"
  ],

  "extends": "airbnb-base",

  "env": {
    "mocha": true,
    "node": true
  },

  "rules": {
    "max-len": 0,
    "new-cap": 0,

    "flowtype/space-after-type-colon": [2, "always"],
    "flowtype/space-before-type-colon": [2, "never"]
  }
}
